doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{doctitle}
  body
    if products.length > 0
      ul
        each product in products
          li
            h1 #{product.item}
    else
      h1 no products found